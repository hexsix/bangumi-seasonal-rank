---
import BaseLayout from "../layouts/BaseLayout.astro";
import AnimeList from "../components/sections/AnimeList.astro";

const response = await fetch(
    "https://api.rinshankaiho.fun/api/v0/season/available",
).then((res) => res.json());

const availableSeasonIdList = response.available_seasons;
---

<BaseLayout currentSeasonId="">
    <AnimeList availableSeasonIdList={availableSeasonIdList} />
</BaseLayout>
